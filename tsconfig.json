{
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": false,
        "lib": [
            "es2017"
        ],
        "outDir": "./dist/",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "target": "es2017",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        ".serverless/**/*",
        ".webpack/**/*",
        "_warmup/**/*",
        ".vscode/**/*"
    ]
}
